#form_div
  %div
    %div.centered
      %image#logo{:src => image_url('logo450x429.png')}
    %div#dropdown
    %div.centered
      %button.togglePage#selected{type: 'button', onclick: 'routeToProductPage()'} PRODUCTS
      %button.togglePage#unselected{type: 'button', onclick: 'routeToVendorPage()'} VENDORS
    %table
      %tbody#letter-nav
        %tr#letters
          - ('A'..'Z').to_a.each do |letter|
            %td#jump= letter
  %div{class: flash[:type]}
    = flash[:message]
  %table#index
    %tbody
      - ('A'..'Z').to_a.each do |letter|
        %tr#letter-heading
          %td= letter
        - Product.where("name LIKE '#{letter}%'").each do |product|
          %tr
            %td#products{:text-decoration => 'none', :background-color => 'black'}= link_to "#{product.name} - #{product.vendor.name}", edit_product_path(product)
