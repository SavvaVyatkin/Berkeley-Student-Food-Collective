#form_div
  %h2 All Products
  %div{class: flash[:type]}
    = flash[:message]
  %table{:border => 1}
    %tbody
      %tr
        %th Name  
        %th Vendor  
        %th More Details  
      - @products.each do |product|
        %tr
          %td= product.name 
          %td= Vendor.find(product.vendor_id).name
          %td= link_to "More about #{product.name}", edit_product_path(product)

%li= link_to 'Add new product', new_product_path
%li= link_to 'Go to vendors', vendors_path