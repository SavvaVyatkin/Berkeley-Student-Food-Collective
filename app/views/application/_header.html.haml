%header
  %div{:class => "navbar navbar-expand-md navbar-dark bg-dark static-top"}
    %div{:class => "container-fluid"}
      %div{:class => "navbar-header"}
        = link_to discovery_path, id: "logo", class: "navbar-brand w-50" do
          = image_tag "logo450x429.png", id: "logoheader"
      %button{:type => "button", :class => "navbar-toggler", :data => {:toggle => "collapse", :target => "#navbarResponsive"}, :aria => {:expanded => "false", :controls => "navbarResponsive", :label => "Toggle navigation"}}
        %span{:class => "navbar-toggler-icon"}
      %div{:id => "navbarResponsive", :class => "collapse navbar-collapse w-100"}
        %ul{:class => "navbar-nav w-100"}
          -if admin
            %li{:class => "navbar-text"} ADMIN
            %li{:class => "nav-item#{' active' if currentPage == 'vendor'}"}
              %a{:class => "nav-link", :href => admin_vendors_path} Vendors
            %li{:class => "nav-item#{' active' if currentPage == 'product'}"}
              %a{:class => "nav-link", :href => admin_products_path} Products
            %li{:class => "nav-item#{' active' if currentPage == 'tag'}"}
              %a{:class => "nav-link", :href => admin_tags_path} Tags
          -else
            %li{:class => "nav-item#{' active' if currentPage == 'discovery'}"}
              %a{:class => "nav-link", :href => discovery_path} Discovery
            %li{:class => "nav-item#{' active' if currentPage == 'vendor'}"}
              %a{:class => "nav-link", :href => vendors_path} Vendors
            %li{:class => "nav-item#{' active' if currentPage == 'product'}"}
              %a{:class => "nav-link", :href => products_path} Products
      -if admin
        .dropdown
          %button.dropbtn
            %i.fa.fa-plus
          .dropdown-content
            = button_to "Add Product", new_admin_product_path, {method: :get, class: 'prod-link'}
            = button_to "Add Vendor", new_admin_vendor_path, {method: :get, class: 'prod-link'}